sudo apt -y install openjdk-8-jdk
JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64 /opt/Android/Sdk/tools/bin/sdkmanager --install 'system-images;android-33;google_apis;x86_64'
echo no |JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64 /opt/Android/Sdk/tools/bin/avdmanager create avd --force --name testAVD --abi google_apis/x86_64 --package 'system-images;android-33;google_apis;x86_64'
sudo usermod -G kvm -a developer
sudo chown root.kvm /dev/kvm
sudo chown root.kvm /dev/dri
sudo apt -y install libvulkan1
rm /opt/Android/Sdk/emulator/qemu/linux-x86_64/lib64/vulkan/libvulkan.so
ln -s /usr/lib/x86_64-linux-gnu/libvulkan.so.1 /opt/Android/Sdk/emulator/qemu/linux-x86_64/lib64/vulkan/libvulkan.so
